<div class="main_head">
  <div class="left-header">
    <div class="group_name">
      <%= @room.name%>
    </div>
  </div>
  <div class="right-header">
    <div class="end_chat">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main_contents">
  <%= render partial:'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message] , class: 'main_foot', local:true do |f|%>
  <div class="form">
    <%= f.text_field :content, class:'text' ,placeholder:'type a message'%>
    <label class="form_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label> 
  </div>
  <%= f.submit '送信',class:'send_buttom'%>
<%end %>
