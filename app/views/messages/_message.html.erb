<div class="upper_chat">
  <div class="chat_info">
    <div class="chat_user_name">
      <%# 投稿したユーザー名情報を出力する %>
      <%= message.user.name%>
    </div>
    <div class="chat_date">
      <%# 投稿した時刻を出力する %>
      <%= l message.created_at%>
    </div>
  </div>
  <div class="lower_chat">
    <div class="comment">
      <%# 投稿したメッセージ内容を記述する %>
      <%= message.content%>
    </div>
    <%= image_tag message.image.variant(resize: '500×500'), class: 'message-image'  if message.image.attached?%>
  </div>
</div>  
